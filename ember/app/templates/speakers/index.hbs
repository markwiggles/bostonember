<table class="table">
	
	<thead class="text-primary">
		<th>Name</th>
		<th>Presentation Count</th>
	</thead>

	<tbody class="table-striped">
		<p>
		{{#link-to 'speakers.create' class="create-speaker"}}Create{{/link-to}}
		</p>
		{{#each}}
		<tr>
			<td>{{~#link-to 'speakers.show' this}} {{name}} {{/link-to}}</td>
			<td>{{presentations.length}}</td>
		</tr>
		{{/each}}
	</tbody>
	
</table>